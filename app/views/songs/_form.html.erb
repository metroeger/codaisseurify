<%= form_for (@song) do |f| %>
<ul>
  <% @song.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

    <div class="field">
    <%= f.label :title%>
   <%= f.text_field :title %>
   <%= f.label :artist_id %>
    <%= f.collection_select(:artist_id, @artists, :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit (@song.new_record? ? "Add song" : "Update") %>
  </div>

<%end%>
